<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredients_widget_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/recipe_widget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="8dp"
        android:contentDescription="@string/no_favourite_recipe_yet"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Recipe Name" />

    <TextView
        android:id="@+id/ingredients_widget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="8dp"
        android:contentDescription="@string/no_favourite_recipe_yet"
        android:text="@string/no_favourite_recipe_yet"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>